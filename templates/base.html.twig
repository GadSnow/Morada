<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
		{% block stylesheets %}
			{{- encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar">
			<div class="navbar__content">
				<div>
					<ul>
						<li class="morada__brand">
							<a href="{{ path('app_home')}}">Morada</a>
						</li>
					</ul>
				</div>
				<div>
					<ul class="nav__items">
						<li>
							<a class="" href="{{path('app_index_housings')}}">Louer</a>
						</li>
						<li>
							<a class="" href="">A propos</a>
						</li>
						<li>
							<a class="" href="">Contact</a>
						</li>
						{% if app.user %}
							<div class="admin_nav">
								<li>
									<a href="{{ path('app_admin_entities')}}" class="nav-link">Tableau de bord</a>
								</li>
								<li>
									<a href="{{ path('app_logout')}}" class="nav-link">Se déconnecter</a>
								</li>
							</div>
						{% endif %}
					</ul>
				</div>
				<p class="burger__menu">
					<span class="burger__piece"></span>
					<span class="burger__piece"></span>
					<span class="burger__piece"></span>
				</p>

			</div>

		</nav>
		<div>
			{% block body %}{% endblock %}
		</div>

		{% block javascripts %}
			{{- encore_entry_script_tags('app') }}
		{% endblock %}
		<script id="__bs_script__">//<![CDATA[
																																																																																																																																											  (function() {
																																																																																																																																											    try {
																																																																																																																																											      var script = document.createElement('script');
																																																																																																																																											      if ('async') {
																																																																																																																																											        script.async = true;
																																																																																																																																											      }
																																																																																																																																											      script.src = 'http://HOST:3000/browser-sync/browser-sync-client.js?v=2.29.3'.replace("HOST", location.hostname);
																																																																																																																																											      if (document.body) {
																																																																																																																																											        document.body.appendChild(script);
																																																																																																																																											      } else if (document.head) {
																																																																																																																																											        document.head.appendChild(script);
																																																																																																																																											      }
																																																																																																																																											    } catch (e) {
																																																																																																																																											      console.error("Browsersync: could not append script tag", e);
																																																																																																																																											    }
																																																																																																																																											  })()
																																																																																																																																											//]]></script>
																																																																																																																																												</body>
																																																																																																																																											</html>
