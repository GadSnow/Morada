{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="fs-1 fw-bold">Informations sur le client:
			{{ client.clientName }}</h1>

		<table class="table table-striped">
			<tbody>
				<tr>
					<th>ID</th>
					<td>{{ client.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ client.clientName }}</td>
				</tr>
				<tr>
					<th>Numéro de téléphone</th>
					<td>{{ client.clientNumber }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ client.clientEmail }}</td>
				</tr>
				<tr>
					<th>Date de création</th>
					<td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_client_index') }}" class="btn btn-secondary">Retour à la liste des clients</a>

		<a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-primary">Modifier</a>

		{{ include('client/_delete_form.html.twig') }}
	</div>

{% endblock %}
