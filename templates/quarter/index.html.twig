{% extends 'base.html.twig' %}

{% block title %}Quarter index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="fs-1 fw-bold">Gestion des quartiers</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Nom</th>
					<th>Date de cr√©ation</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for quarter in quarters %}
					<tr>
						<td>{{ quarter.id }}</td>
						<td>{{ quarter.quarterName }}</td>
						<td>{{ quarter.createdAt ? quarter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_quarter_show', {'id': quarter.id}) }}" class="btn btn-secondary">Voir</a>
							<a href="{{ path('app_quarter_edit', {'id': quarter.id}) }}" class="btn btn-primary">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Pas d'enregistrement</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_quarter_new') }}" class="btn btn-primary">Ajouter un nouveau quartier</a>

	</div>
{% endblock %}
