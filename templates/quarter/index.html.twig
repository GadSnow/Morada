{% extends 'base.html.twig' %}

{% block title %}Quarter index{% endblock %}

{% block body %}
    <h1>Quarter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>QuarterName</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quarter in quarters %}
            <tr>
                <td>{{ quarter.id }}</td>
                <td>{{ quarter.quarterName }}</td>
                <td>{{ quarter.createdAt ? quarter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_quarter_show', {'id': quarter.id}) }}">show</a>
                    <a href="{{ path('app_quarter_edit', {'id': quarter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quarter_new') }}">Create new</a>
{% endblock %}
