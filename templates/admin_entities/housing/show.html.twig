{% extends 'base.html.twig' %}

{% block title %}Housing
{% endblock %}

{% block body %}
	<h1>Housing</h1>

	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ housing.id }}</td>
			</tr>
			<tr>
				<th>HousingDescription</th>
				<td>{{ housing.housingDescription }}</td>
			</tr>
			<tr>
				<th>NumberOfRooms</th>
				<td>{{ housing.numberOfRooms }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ housing.slug }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ housing.price }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ housing.createdAt ? housing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Sold</th>
				<td>{{ housing.sold ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_housing_index') }}">back to list</a>

	<a href="{{ path('app_housing_edit', {'id': housing.id}) }}">edit</a>

	{{ include('admin_entities/housing/_delete_form.html.twig') }}
{% endblock %}
