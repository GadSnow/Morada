{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>Category</h1>

	<table class="table table-striped">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>CategoryName</th>
				<td>{{ category.categoryName }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_category_index') }}" class="btn btn-secondary">back to list</a>

	<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">edit</a>

	{{ include('category/_delete_form.html.twig') }}
{% endblock %}
